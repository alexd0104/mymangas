{# templates/vitrine/mangashow.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ manga.titre }} — Vitrine{% endblock %}

{% block body %}
  <div class="container my-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <a class="btn btn-secondary btn-sm" href="{{ path('app_vitrine_show', { id: vitrine.id }) }}">
          ← Retour à la vitrine
        </a>
      </div>
      <div class="text-muted small">
        {% if vitrine.createur %}
          Vitrine de <strong>{{ vitrine.createur.email }}</strong>
        {% endif %}
        {% if vitrine.publiee %}
          <span class="badge bg-success ms-2">Publique</span>
        {% else %}
          <span class="badge bg-secondary ms-2">Privée</span>
        {% endif %}
      </div>
    </div>

    <div class="row g-4">
      <div class="col-md-5">
        <div class="card shadow-sm">
          <svg class="bd-placeholder-img card-img-top" width="100%" height="320"
               xmlns="http://www.w3.org/2000/svg" role="img" preserveAspectRatio="xMidYMid slice" focusable="false">
            <title>{{ manga.titre }}</title>
            <rect width="100%" height="100%" fill="#e9ecef"></rect>
            <text x="50%" y="50%" fill="#6c757d" dy=".3em" text-anchor="middle">Couverture</text>
          </svg>
          <div class="card-body">
            <p class="card-text text-muted mb-0">Id : {{ manga.id }}</p>
          </div>
        </div>
      </div>

      <div class="col-md-7">
        <div class="card shadow-sm">
          <div class="card-body">
            <h1 class="h4 mb-3">{{ manga.titre }}</h1>

            <dl class="row mb-0">
              <dt class="col-sm-4">Série</dt>
              <dd class="col-sm-8">{{ manga.serie ?? '—' }}</dd>

              <dt class="col-sm-4">Tome</dt>
              <dd class="col-sm-8">{{ manga.tome ?? '—' }}</dd>

              <dt class="col-sm-4">Bibliothèque</dt>
              <dd class="col-sm-8">
                {% if manga.bibliotheque %}
                  {{ manga.bibliotheque.titre }}
                {% else %}
                  —
                {% endif %}
              </dd>
            </dl>
          </div>
        </div>

        <div class="mt-3">
          <a class="btn btn-primary" href="{{ path('app_vitrine_show', { id: vitrine.id }) }}">
            ← Retour à la vitrine
          </a>
        </div>
      </div>
    </div>

  </div>
{% endblock %}
